<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="250px"
        android:layout_height="250px"
        app:srcCompat="@drawable/ic_offer_foreground"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txtNameP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@id/imgProduct"
        android:text="TextView" />


    <TextView
        android:padding="10px"
        android:id="@+id/txtDescriptionP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNameP"
        android:layout_toRightOf="@id/imgProduct"
        android:textSize="10dp"
        android:text="TextView" />


    <TextView
        android:id="@+id/txtPriceP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgProduct"
        android:layout_below="@id/txtDescriptionP"
        android:textStyle="bold"
        android:text="TextView" />


