<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_offer_foreground" />

    <TextView
        android:layout_marginTop="30px"
        android:id="@+id/txtNameP"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@id/imgProduct"
        android:text="TextView" />

    <TextView
        android:padding="10px"
        android:id="@+id/txtDescriptionP"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNameP"
        android:layout_toRightOf="@id/imgProduct"

        android:textSize="10dp"
        android:text="TextView" />


    <Button
        android:id="@+id/btnAdd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/txtPriceP"
        android:layout_toRightOf="@id/imgProduct"
        android:background="@drawable/res_roundedbutton"
        android:backgroundTint="@color/piel"
        android:layout_marginTop="10px"
        android:text="+"
        android:textSize="20dp"

        />

    <TextView
        android:id="@+id/txtPriceP"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgProduct"
        android:layout_below="@id/txtDescriptionP"
        android:textStyle="bold"
        android:text="TextView" />







</RelativeLayout>