<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_offer_foreground" />

    <View
        android:id="@+id/verticalSeparator"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/imgProduct"
        android:background="@color/piel" />

    <TextView
        android:id="@+id/txtNameP"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/verticalSeparator"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:padding="10px"
        android:id="@+id/txtDescriptionP"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNameP"
        android:layout_toRightOf="@id/verticalSeparator"
        android:textSize="10dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtPriceP"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/verticalSeparator"
        android:layout_below="@id/txtDescriptionP"
        android:textStyle="bold"
        android:text="TextView" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/txtDescriptionP"
        android:layout_toEndOf="@id/txtDescriptionP"
        android:layout_toRightOf="@id/verticalSeparator"
        android:background="@drawable/res_roundedbutton"
        android:backgroundTint="@color/piel"
        android:text="+"
        android:textSize="20dp" />


</RelativeLayout>