<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".SeguimientoActivity"
    android:background="@drawable/mapa"
    >


    <TextView
        android:id="@+id/txtEstado"
        android:layout_width="284dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="474dp"
        android:background="@drawable/shape"
        android:gravity="center_vertical"
        android:text="orden en camino..."
        android:textSize="15dp" />

    <ImageButton
        android:id="@+id/ibtnEstado"
        android:layout_width="34dp"
        android:layout_height="38dp"
        android:layout_alignTop="@id/txtEstado"
        android:layout_alignRight="@id/txtEstado"
        android:layout_centerVertical="true"

        android:layout_marginTop="5dp"

        android:layout_marginRight="2dp"
        android:background="@color/white"
        app:srcCompat="@drawable/button" />

    <TextView
        android:id="@+id/txtInfoextra"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/txtEstado"
        android:layout_alignTop="@id/txtEstado"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape"
        android:text="Domiciliario: Ernesto Perez Gonzales\n pedido 123\n para mas info del pedido haga click" />

    <ImageView
        android:id="@+id/imgDomi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtInfoextra"
        android:layout_alignRight="@id/txtEstado"
        android:layout_marginTop="-62dp"
        android:layout_marginRight="-54dp"


        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/circularshape" />


</RelativeLayout>