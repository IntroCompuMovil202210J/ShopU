<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".DeliveryHomeActivity"


    >

    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        />

    <Button

        android:id="@+id/btnProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/texto"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/res_roundedbutton"
        android:backgroundTint="@color/piel"
        android:drawableLeft="@drawable/profile80"
        android:text="Perfil"

        />

    <Button
        android:id="@+id/btnOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnProfile"
        android:background="@drawable/res_roundedbutton"
        android:backgroundTint="@color/piel"
        android:drawableLeft="@drawable/pedido"
        android:text="PEDIDOS" />


</RelativeLayout>