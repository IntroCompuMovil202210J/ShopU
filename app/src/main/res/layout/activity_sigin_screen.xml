<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_fondologin"
    tools:context=".RegisterScreenActivity">

    <ImageView
        android:id="@+id/imgLogo_loginregister"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/img_logo" />

    <EditText
        android:id="@+id/etxtname"
        android:layout_below="@+id/imgLogo_loginregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:backgroundTint="@color/white_blur"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="18dp"
        android:layout_marginBottom="15dp"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/etxtlastname"
        android:layout_below="@+id/etxtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:backgroundTint="@color/white_blur"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="18dp"
        android:layout_marginBottom="15dp"
        android:hint="Apellido" />

    <EditText
        android:id="@+id/etxtmailregister"
        android:layout_below="@+id/etxtlastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:backgroundTint="@color/white_blur"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="18dp"
        android:layout_marginBottom="15dp"
        android:hint="Correo" />

    <EditText
        android:id="@+id/etxtpasswordregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etxtmailregister"
        android:background="@drawable/textview_border"
        android:backgroundTint="@color/white_blur"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:textSize="18dp"
        android:hint="Contraseña"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etxtconfirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etxtpasswordregister"
        android:background="@drawable/textview_border"
        android:backgroundTint="@color/white_blur"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:hint="Confirmar contraseña"
        android:textSize="18dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etxtphone"
        android:layout_below="@+id/etxtconfirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:backgroundTint="@color/white_blur"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:textSize="18dp"
        android:textAlignment="center"
        android:inputType="phone"
        android:hint="Celular" />

    <CheckBox
        android:id="@+id/checkTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Acepta Terminos y Condiciones"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/etxtphone"
        />

    <Button
        android:id="@+id/btnSiginScreen"
        android:layout_width="154dp"
        android:layout_height="30dp"
        android:layout_below="@+id/checkTerms"
        android:layout_centerHorizontal="true"
        android:background="@drawable/res_roundedbutton"
        android:textColor="@color/black"
        android:backgroundTint="@color/piel"
        android:layout_marginBottom="20dp"
        android:text="Registrarse" />




</RelativeLayout>